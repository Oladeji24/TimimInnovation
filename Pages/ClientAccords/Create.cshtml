@page
@using Microsoft.AspNetCore.Authorization;
@using TimimInnovation.Models
@model TimimInnovation.Pages.ClientAccords.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Clients Term And Condition</h1>

<div class="container mt-4">
    <form method="post">
        <div class="form-group">
            <label asp-for="ClientConcord.ClientConcordServiceType" class="control-label"></label>
            <select asp-for="ClientConcord.ClientConcordServiceType" class="form-control">
                @foreach (var type in Enum.GetValues(typeof(ClientConcord.ServiceType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="ClientConcord.ClientConcordServiceType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientConcord.ClientConcordTitle" class="control-label"></label>
            <input asp-for="ClientConcord.ClientConcordTitle" class="form-control" />
            <span asp-validation-for="ClientConcord.ClientConcordTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientConcord.ClientConcordText" class="control-label"></label>
            <textarea asp-for="ClientConcord.ClientConcordText" rows="10" class="form-control" style="width: 100%; max-width: 100%;"></textarea>
            <span asp-validation-for="ClientConcord.ClientConcordText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="mt-3">
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
