@page
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Roles = "Admin")]
@model TimimInnovation.Pages.Admin.Transactions.IndexModel

<h1 class="mb-4">Transactions</h1>

<div class="container">

    <!-- Dropdown for filtering by Username -->
    <form method="get" class="mb-4">
        <div class="form-group">
            <label for="usernameDropdown">Filter by Username:</label>
            <select id="usernameDropdown" name="SelectedUsername" class="form-control" onchange="this.form.submit()">
                <option value="">-- Select a username --</option>
                @foreach (var username in Model.Usernames)
                {
                    <option value="@username" selected="@(Model.SelectedUsername == username ? "selected" : null)">@username</option>
                }
            </select>
        </div>
    </form>

    <!-- Displaying the transactions as cards -->
    <div class="row">
        @foreach (var item in Model.TimimTransaction)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <!-- Displaying transaction details -->
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.TransactionCode)</h5>
                        <p><strong>Username:</strong> @Html.DisplayFor(modelItem => item.Username)</p>
                        <p><strong>First Name:</strong> @Html.DisplayFor(modelItem => item.FirstName)</p>
                        <p><strong>Last Name:</strong> @Html.DisplayFor(modelItem => item.LastName)</p>
                        <p><strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>
                        <p><strong>WhatsApp Number:</strong> @Html.DisplayFor(modelItem => item.WhatsAppNumber)</p>
                        <p><strong>Mobile Number:</strong> @Html.DisplayFor(modelItem => item.MobileNumber)</p>
                        <p><strong>NIN:</strong> @Html.DisplayFor(modelItem => item.NIN)</p>
                        <p><strong>Identification Number:</strong> @Html.DisplayFor(modelItem => item.IdentificationNumber)</p>
                        <p><strong>Property:</strong> @Html.DisplayFor(modelItem => item.PropertyName)</p>
                        <p><strong>Price:</strong> @Html.DisplayFor(modelItem => item.Price)</p>
                        <p><strong>Payment Status:</strong> @Html.DisplayFor(modelItem => item.PaymentStatus)</p>
                        <p><strong>Payment Method:</strong> @Html.DisplayFor(modelItem => item.PaymentMethod)</p>
                        <p><strong>Receipt No:</strong> @Html.DisplayFor(modelItem => item.ReceiptNo)</p>
                        <p><strong>Start Date:</strong> @Html.DisplayFor(modelItem => item.StartDate)</p>
                        <p><strong>End Date:</strong> @Html.DisplayFor(modelItem => item.EndDate)</p>
                        <p><strong>Created Date:</strong> @Html.DisplayFor(modelItem => item.CreatedDate)</p>
                        <p><strong>Updated Date:</strong> @Html.DisplayFor(modelItem => item.UpdatedDate)</p>

                        <div class="mt-3">
                            <a asp-page="./Details" asp-route-id="@item.TransactionId" class="btn btn-info btn-sm">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
