@page
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Roles = "Admin")]
@model TimimInnovation.Pages.Admin.Securities.Activity.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LastActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Display Username but make it read-only -->
            <div class="form-group">
                <label asp-for="LastActivity.Username" class="control-label"></label>
                <input asp-for="LastActivity.Username" class="form-control" readonly />
                <span asp-validation-for="LastActivity.Username" class="text-danger"></span>
            </div>

            <!-- Display LastSeen but make it read-only -->
            <div class="form-group">
                <label asp-for="LastActivity.LastSeen" class="control-label"></label>
                <input asp-for="LastActivity.LastSeen" class="form-control" readonly />
                <span asp-validation-for="LastActivity.LastSeen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.forms[0].submit();
        });
    </script>
}
